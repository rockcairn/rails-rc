
<%= form_with(model: @peak, local: true) do |form| %>
<div class="rounded-md bg-gray-100 p-4 md:p-6">
  <% if @peak.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@peak.errors.count, "error") %> prohibited this peak from being saved:</h2>
      <ul>
        <% @peak.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="mb-4">
        <%= form.label :name, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :name, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :range, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :range, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :elevation, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.number_field :height, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :grade, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :difficulty, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :roundtrip_miles, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :roundtrip_miles, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :elevation_gain, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.number_field :elevation_gain, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :roundtrip_duration, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :roundtrip_duration, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :report_date, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="flex items-center">
                <%= form.date_select :report_date, { start_year: 2000, end_year: Date.today.year }, class: 'peer block rounded-md border border-gray-100 py-2 pl-10 mr-2 text-sm outline-1' %>
            </div>
         </div>
    </div>
    <div class="flex">
        <div class="w-32">
            <%= form.label :solo, class: 'mb-2 mr-2 inline-block text-sm font-medium' %>
            <div class=" mb-2 mx-2 inline-block">
                <%= form.check_box :solo, {}, true, false %>
            </div>
        </div>
         <div class="w-32">
            <%= form.label :combo, class: 'mb-2 mr-2 inline-block text-sm font-medium' %>
            <div class="flex mb-2 mx-2 inline-block">
                <%= form.check_box :combo, {}, true, false %>
            </div>
        </div>
    </div>
    <div class="mb-4">
        <%= form.label :description, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_area :description, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>
    <div class="mb-4">
        <%= form.label :domain, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :domain, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>
    <div class="mb-4">
        <%= form.label :relative_path, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :relative_path, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>

    <div class="mb-4">
        <%= form.label :keywords, class: 'mb-2 block text-sm font-medium' %>
         <div class="relative mt-2 rounded-md">
            <div class="relative">
                <%= form.text_field :keywords, class: 'peer block w-full rounded-md border border-gray-100 py-2 pl-10 text-sm outline-1' %>
            </div>
         </div>
    </div>


    <div class="mt-6 flex justify-end gap-4">
        <%= link_to 'Cancel', peaks_path, class: 'flex h-10 items-center rounded-lg bg-gray-200 outline-1 px-4 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-300' %>
        <%= form.submit "Save Peak", class: 'flex h-10 items-center rounded-lg bg-blue-600 px-4 text-sm font-medium text-white transition-colors hover:bg-blue-500 focus-visible:outline focus-visible:outline-1 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:bg-blue-600 aria-disabled:cursor-not-allowed aria-disabled:opacity-50'%>
    </div>
<% end %>
</div>
<% content_for :title, "RockCairn - " + @peak.name %>
<article id="peak" class="peak">
    <header>
        <div class="flex flex-row">
            <div class="basis-64"><h1 class="text-2xl"><%= @peak.name %> (<%= @peak.height %> ft.)</h1></div>
            <div class="basis-64 px-2"><%= link_to 'Back', peaks_path, class: 'flex h-10 items-center justify-center gap-2 rounded-md bg-gray-50 p-3 text-sm font-medium hover:bg-sky-100 hover:text-blue-600 md:flex-none md:p-2 md:px-3' %></div>
            <div class="basis-64 px-2"><%= link_to 'Edit', edit_peak_path(@peak), class: 'flex h-10 items-center rounded-lg bg-blue-600 px-4 text-sm font-medium text-white transition-colors hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:bg-blue-600 aria-disabled:cursor-not-allowed aria-disabled:opacity-50' %></div>
            <div class="basis-64 px-2"><%= button_to 'Delete', @peak, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'flex h-10 items-center rounded-lg bg-blue-600 px-4 text-sm font-medium text-white transition-colors hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:bg-blue-600 aria-disabled:cursor-not-allowed aria-disabled:opacity-50' %></div>
        </div>
        <h3 class="text-xl">Range: <%= @peak.range %></h3>
    </header>
    <section class="p-8">
        <header>
            <h2 class="text-lg">Report Description</h2>
        </header>
        <div class="flex flex-row">
            <%= truncate(@peak.description, length: 150, separator: ' ') %>
        </div>
    </section>
    <section class="p-8">
        <header>
            <h2 class="text-lg">Report Details</h2>
        </header>

        <div class="rounded-lg bg-gray-50 p-2 md:pt-0">
        <table class="hidden text-gray-900 md:table">
            <thead class="rounded-lg text-left text-sm font-normal">
                <tr>
                    <th scope="col" class="px-3 py-5 font-bold">
                    Grade, Class
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Miles (rt)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Elev.Gain (ft)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Time (hh.mm)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Climbed
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Solo
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Combo
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Go to Report
                </th>
                </tr>
            </thead>
            <tbody class="bg-white">
                <tr key=<%= @peak.id %> class="w-full border-b py-3 text-sm last-of-type:border-none [&:first-child>td:first-child]:rounded-tl-lg [&:first-child>td:last-child]:rounded-tr-lg [&:last-child>td:first-child]:rounded-bl-lg [&:last-child>td:last-child]:rounded-br-lg" >
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.difficulty %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.roundtrip_miles %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.elevation_gain %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.roundtrip_duration %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.report_date %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%= @peak.solo %>
                    </td>
                    <td class="whitespace-nowrap text-center px-3 py-3">
                    <%=  @peak.combo %>
                    </td>
                    <td class="whitespace-nowrap text-center py-3 pl-6 pr-3">
                    <%= link_to @peak.description, @peak.domain + @peak.relative_path, target: '_blank', class: 'flex h-[48px] grow items-center justify-center gap-2 rounded-md bg-gray-50 p-3 text-sm font-medium hover:bg-sky-100 hover:text-blue-600 md:flex-none md:justify-start md:p-2 md:px-3' %>
                    </td>
                </tr>
            </tbody>
        </table>
        </div>
    </section>
    <footer>
    </footer>
</article>

<% content_for :title, "RockCairn - Peaks List" %>
 <h1 class="text-2xl">Peak List</h1>
 <div class="mt-4 flex justify-end items-center justify-between gap-2 md:mt-8">
  <%= link_to 'New Report', new_peak_path, class: 'flex h-10 items-center rounded-lg bg-blue-600 px-4 text-sm font-medium text-white transition-colors hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:bg-blue-600 aria-disabled:cursor-not-allowed aria-disabled:opacity-50' %>
</div>
<div class="mt-6 flow-root">
    <div class="inline-block min-w-full align-middle">
        <div class="rounded-lg bg-gray-100 p-2 md:pt-0">
            <table class="hidden min-w-full text-gray-900 md:table">
            <thead class="rounded-lg text-left text-sm font-normal">
                <tr>
                <th scope="col" class="px-4 py-5 font-bold sm:pl-6">
                    Rank
                </th>
                <th scope="col" class="px-4 py-5 font-bold sm:pl-6">
                    Peak
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Range
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Elevation (ft)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Grade, Class
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Miles (rt)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Elev.Gain (ft)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Time (hh.mm)
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Climbed
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Solo
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Combo
                </th>
                <th scope="col" class="px-3 py-5 font-bold">
                    Go to Report
                </th>
                </tr>
            </thead>
            <tbody class="bg-white">
           <% @peaks.each do |peak| %>
                <tr
                    key=<%= peak.id %>
                    class="w-full border-b py-3 text-sm last-of-type:border-none [&:first-child>td:first-child]:rounded-tl-lg [&:first-child>td:last-child]:rounded-tr-lg [&:last-child>td:first-child]:rounded-bl-lg [&:last-child>td:last-child]:rounded-br-lg"
                >
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.id %>
                    </td>
                    <td class="whitespace-nowrap py-3 pl-6 pr-3">
                    <div class="flex items-center gap-3">
                        <%= link_to peak.name, peak, class: 'flex h-[48px] grow items-center justify-center gap-2 rounded-md bg-gray-200 p-3 text-sm font-medium hover:bg-sky-100 hover:text-blue-600 md:flex-none md:justify-start md:p-2 md:px-3' %>
                    </div>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.range %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.height %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.difficulty %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.roundtrip_miles %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.elevation_gain %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.roundtrip_duration %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.report_date %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%= peak.solo %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-3">
                    <%=  peak.combo %>
                    </td>
                    <td class="whitespace-nowrap py-3 pl-6 pr-3">
                    <%= link_to peak.description, peak.domain + peak.relative_path, target: '_blank', class: 'flex h-[48px] grow items-center justify-center gap-2 rounded-md bg-gray-200 p-3 text-sm font-medium hover:bg-sky-100 hover:text-blue-600 md:flex-none md:justify-start md:p-2 md:px-3' %>
                    </td>
                </tr>
               <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>
